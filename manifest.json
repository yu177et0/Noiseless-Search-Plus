{
  "name": "ノイズレスサーチ＋",
  "version": "1.1",
  "manifest_version": 2,
  "description": "ノイズレスサーチの検索エンジンを利用して、正確な情報に簡単にアクセスできる拡張機能です。",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
        "38": "img/icon48.png"
    },
    "default_title": "Noiseless Search",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+N",
        "mac": "Alt+N"
      },
      "description": "Opens hello.html"
    }
  }
}
